<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/film_image_details"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/film_judul_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@id/film_image_details"
            android:text="@string/nama_film"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/film_rilis_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_judul_details"
            android:layout_marginStart="26dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/film_image_details"
            android:text="@string/nama_film"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/film_description_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_rilis_details"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/film_image_details"
            android:ellipsize="end"
            android:text="@string/lorem"/>
    </RelativeLayout>
</ScrollView>